      <li><%= link_to "麦わら", slide_path, data: {"turbolinks" => false}  %></li>
      <% else %>
      <% end %>
    </ul>
  </div>
  <div class="header-right">
   <% if logged_in? %>
    <div class="header-button"><%= link_to "ログアウト", logout_path, method: :delete, data: {"turbolinks" => false} %></div>
    <div class="header-button"><%= link_to "ユーザー 一覧", users_path, data: {"turbolinks" => false} %></div>
  　<% else %>
    <div class="header-button"><%= link_to "ログイン", login_path, data: {"turbolinks" => false} %></div>
    <div class="header-button"><%= link_to "新規登録", signup_path, data: {"turbolinks" => false} %></div>
   <% end %>
  </div>
</header>