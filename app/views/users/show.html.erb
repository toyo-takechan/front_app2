<% provide(:title, "マイページ") %>
<div class="wrapper">
  <%# <%= render 'layouts/aside' %> 
  <div class="show_aside">
      <% if @user.microposts.any? %>
        <h3 class="show_aside_title">投稿数 (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
  </div>
  <div class="wrapper_main user_show">
    <h1 class="#"><%= "あなたのページ" %><br>
      <div class ="user_show_info">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </div>  
    </h1>
    <%= link_to "プロフィールページ更新", edit_user_path, class:"#" %>
  </div>
</div>