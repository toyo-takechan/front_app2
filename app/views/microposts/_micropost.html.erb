<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span><br>
  <span class="content"><%= micropost.content %></span><br>
  <span class="timestamp">
    Posted  <%= time_ago_in_words(micropost.created_at) %> 
    <% if current_user?(micropost.user)%>
      <%= link_to "削除", micropost, method: :delete, data: {confrim: "You sure?" } %>
    <% end %>
  </span>
</li>