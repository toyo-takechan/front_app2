<%= provide(:title, '/robot1')%>
<div class="wrapper">
  <%= render 'layouts/aside' %>
  <div class="wrapper_main robot">
    <div class="modal" id="ruby-modal">
      <%= image_tag("ruby1.png", alt:"logo", width:"100%", class:"ruby1")%>
    </div>
    <div class="robot-left">
    <h1 class="robot1">Robot　１号のページへようこそ</h1>
    <p class="robot-left-p">僕のページで　遊んでいってね！ 僕は何に似てるかな？　</p>
    <%= link_to image_tag('robots/robot1.png', alt:"logo", width: "600px", id:"omiup")%>
    </div>
    <div class="robot-right">
      <button class="robot-right-btn" id="modal-robot1"><i class="fas fa-tv fa-4x"></i></button>
      <div id ="omi-btn">?</div>
    </div>
  </div>
</div>
<script>
' use strict';
{
  const btn = document.getElementById('omi-btn');

  btn.addEventListener('click', ()=> {
    const results = ['鉄腕アトム', 'ガンダム','カエルのピクルス', 'マジンガーZ', 'ターミネーター', 'トランスフォーマー', 'ど根性　蛙　ピョン吉'];
    const n = Math.floor(Math.random() * results.length);
    btn.textContent = results[n];
  });
}
</script>
